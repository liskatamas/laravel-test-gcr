version: "3.1"

services:
    postgres:
          image: postgres:9.5-alpine
          container_name: ${PROJECT_NAME}-postgres
          volumes:
             - "./docker/postgres:/var/lib/postgresql/data"
          environment:
            - POSTGRES_USER=${DB_USERNAME}
            - POSTGRES_PASSWORD=${DB_PASSWORD}
            - POSTGRES_DB=${DB_DB}
          ports:
           - "5432:5432"
          networks:
                testing_net:
                    ipv4_address: 172.28.1.2
